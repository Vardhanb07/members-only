<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>index</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        font-family: "Lexend";
      }
      a {
        text-decoration: none;
        color: black;
      }
      body {
        margin: 18px;
      }
      nav {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
      }
      .header {
        flex: 1;
      }
      .header > h1 {
        font-size: 32px;
        font-weight: 500;
      }
      .sub-header {
        color: #03045e;
      }
      .links {
        flex: 1;
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
        align-items: center;
        font-size: 22px;
      }
      .links > div {
        background-color: #023e8a;
        padding: 10px 16px;
      }
      .links a {
        color: #fff;
      }
    </style>
  </head>
  <body>
    <% if(locals.user) { %>
    <nav>
      <div class="header">
        <h1>Members<span class="sub-header">Only</span></h1>
      </div>
      <div class="links">
        <div class="add-message">
          <a href="/message/create">Add Message</a>
        </div>
        <div class="log-out">
          <a href="/log-out">Log Out</a>
        </div>
      </div>
    </nav>
    <% } else { %>
    <nav>
      <div class="header">
        <h1>Members<span class="sub-header">Only</span></h1>
      </div>
      <div class="links">
        <div class="log-in">
          <a href="/log-in">Log In</a>
        </div>
        <div class="sign-up">
          <a href="/sign-up">Sign Up</a>
        </div>
      </div>
    </nav>
    <% } %> 
    <%- include('messages'); %>
  </body>
</html>
